<div class="container">

  <h1 class="center-text">Tool Page for <%= @tool.title.capitalize %></h1>

  <div class="container">
    <div class="d-flex justify-content-between">
      <div class="col-sm">
        <%= cl_image_tag("qx71g1xf7w9yn1jyazmn", width: 400, height: 300, crop: :fill) %>
        <img class="image-container" src="https://media.bahag.com/assets/resp_product/26/89/2689213_25046617.jpg" alt="">
      </div>
      <div class="col-sm">
        <h2 class="center-text">Tool Infomation</h2>
        <h3 class="center-text">Type: <%= @tool.title.capitalize %></h3>
        <p class="center-text"><strong>Description:</strong> <%= @tool.description.capitalize %></p>
        <p class="center-text"><strong>Price:</strong> <%= @tool.price %></p>
      </div>
      <div class="col-sm">
        <h2 class="center-text">User Infomation</h2>
        <h3 class="center-text"><%= @tool.user.email %></h3>
      </div>
    </div>
  </div>

  <div class="container tool-data">
    <div class="row">

    </div>
  </div>

  <div class="container user-data">
    <div class="row">

    </div>
  </div>

  <div class="container reservation-container">
    <h2>Reserve This Tool</h2>
    <button class="reservation-container btn btn-primary" type="button">
      <%= link_to "Reserve Tool", new_tool_reservation_path(@tool) %>
    </button>
  </div>

</div>

