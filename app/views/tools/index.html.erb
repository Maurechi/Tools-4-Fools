
<div class="container">
  <%= form_tag tools_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a tool"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>

<div id="map"
     style="width: 100%; height: 500px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<br>
<h1 class="center-text">What is missing in your Toolkit?</h1>
<br>
<br>
<div class="container">
<% if policy(Tool).create? %>
  <%= link_to new_tool_path do %>
    <p class="btn btn-variant">Rent your own tools  <i class="fas fa-hammer"></i></p>
    <%end%>
  <% end %>




  <div class="cards-grid">


    <% @tools.each do |tool| %>
    <div class="card-trip">

      <%= link_to tool_path(tool) do  %>
      <%= cl_image_tag @tool.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
      <div class="card-trip-infos">

        <div>
          <h2 class=""><%=tool.title.capitalize  %></h2>
          <p><%= tool.description %></p>
          <p><strong><%= tool.address.capitalize %></strong></p>
        </div>
        <div>
        <img src="" alt="">
            <h2 class="center">â‚¬<%=tool.price  %>/day</h2>
        </div>


        </div>
    </div>
    <% end %>
    <br>
  </div>

</div>
